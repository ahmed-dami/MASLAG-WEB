            </tr>
            <tr>
                <th>Prix_p</th>
                <td>{{ product.PrixP }}</td>
            </tr>
            <tr>
                <th>Quantite_p</th>
                <td>{{ product.QuantiteP }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td><img src="{{asset( product.IMGP )}}"></td>
            </tr>
            <tr>
                <th>categorie</th>
                <td>{{ product.categorie }}</td>
            </tr>
        </tbody>
    </table>
</div>

