




{% extends 'base2.html.twig' %}

{% block title %}Planning index{% endblock %}

{% block body %}
    <div style="margin-top:2%;margin-left:20%;">
        <table>
            <tr ><a style="margin-left:50%;color: #c69500;font-size:30px" href="{{ path('category_c_index') }}">categories</a> </tr>
            <tr> <a style="margin-left:3%; color: #c69500;font-size: 30px" href="{{ path('planning_index') }}">Planning</a></tr>
        </table>
    </div>
    <h1  style="width:50%;margin:auto;font-size: 50px;">
        <span style="color:#66CC66">P</span>
        <sub>  <span style="color: #3f51b5">L</span></sub>
        <span style="color:#FFCCCC">A</span>
        <sub>  <span style="color:#FF0066">N</span></sub>
        <span style="color:#FF0000">N</span>
        <sub>   <span style="color:#66CC66">I</span></sub>
        <span style="color:#3f51b5">N</span>
        <sub>  <span style="color:#FFCCCC">G</span></sub>
    </h1>
    <body>
    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>
    <li class="shop_search"><a class="search__active" href="#"></a></li> <div class="brown--color box-search-content search_active block-bg close__top">
        <form id="search_mini_form" class="minisearch" action="#">
            <div class="field__search">
                <input type="text" placeholder="Search entire store here...">
                <div class="action">
                    <a href="#"><i class="zmdi zmdi-search"></i></a>
                </div>
            </div>
        </form>

    </div>
    <div class="container">
                    <table class="table table-hover" style="margin-top:5%; border: unset" >
                        <thead >
                        <tr >
                            <th style="color: #c69500">Id</th>
                            <th style="color: #c69500">Nom</th>
                            <th style="color: #c69500">Prenom</th>
                            <th style="color: #c69500">Telephone</th>
                            <th style="color: #c69500">Email</th>
                            <th style="color: #c69500">Cin</th>
                            <th style="color: #c69500">category</th>
                            <th style="color: #c69500">Temps</th>
                            <th style="color: #c69500">Date</th>

                        </tr>
                        </thead>
                        <tbody style="background:transparent;">
                        {% for planning in plannings %}
                            <tr >
                                <td >{{ planning.id }}</td>
                                <td>{{ planning.nom }}</td>
                                <td>{{ planning.prenom }}</td>
                                <td>{{ planning.telephone }}</td>
                                <td>{{ planning.email }}</td>
                                <td>{{ planning.cin }}</td>
                                <td>{{ planning.category }}</td>
                                <td>{{ planning.tempsP ? planning.tempsP|date('H:i') : '' }}</td>
                                <td>{{ planning.dateP ? planning.dateP|date('Y-m-d') : '' }}</td>


                                <td>
                                    <a   class="fa fa-bars"  style="color: #3f51b5;font-size:25px"  href="{{ path('planning_show', {'id': planning.id}) }}"></a>
                                </td>
                                <td>
                                    <a   class="fa fa-edit" style="color: #3f51b5 ;font-size:25px" href="{{ path('planning_edit', {'id': planning.id}) }}"></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
    </div>
                    <a  class="fa fa-plus" style="font-size: 25px;" href=" {{ path('planning_new') }}"> Ajouter</a>

    </body>
{% endblock %}
